<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BASE THEMES -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbar">@style/Toolbar</item>
    </style>
    <style name="AppTheme.DarkActionBar">
        <item name="toolbar">@style/Toolbar.Dark.LightPopup</item>
    </style>
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="toolbar">@style/Toolbar.Dark</item>
    </style>
    <style name="AppTheme.Dark.LightActionBar">
        <item name="toolbar">@style/Toolbar.DarkPopup</item>
    </style>

    <!-- TOOLBARS -->
    <style name="Toolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:elevation">4dp</item>
    </style>
    <style name="Toolbar.DarkPopup">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>
    <style name="Toolbar.Dark">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>
    <style name="Toolbar.Dark.LightPopup">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>


