<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <uz.shift.colorpicker.LineColorPicker
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dialog_primary_color_picker"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="8dp"
        app:orientation="horizontal"
        app:colors="@array/material_primary_colors"/>

    <uz.shift.colorpicker.LineColorPicker
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dialog_accent_color_picker"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="8dp"
        app:orientation="horizontal"
        app:colors="@array/material_accent_colors"/>

    <uz.shift.colorpicker.LineColorPicker
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/dialog_light_dark_picker"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="8dp"
        app:orientation="horizontal"
        app:colors="@array/material_background_colors"/>

</LinearLayout>